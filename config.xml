<?xml version='1.0' encoding='utf-8'?>
<widget id="com.OvenSim.Moffat" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Moffat Simulator</name>
    <description>
        This is a simulation of the Moffat Oven E32D4.
    </description>
    <author href="http://cordova.io" email="dev@cordova.apache.org">Marc Stevenson</author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
    <platform name="android">
        <icon src="www/res/icons/android/icon-36-ldpi.png" density="ldpi" />
        <icon src="www/res/icons/android/icon-48-mdpi.png" density="mdpi" />
        <icon src="www/res/icons/android/icon-72-hdpi.png" density="hdpi" />
        <icon src="www/res/icons/android/icon-96-xhdpi.png" density="xhdpi" />
        <splash src="www/res/screens/android/screen-hdpi-landscape.png" density="land-hdpi" />
        <splash src="www/res/screens/android/screen-ldpi-landscape.png" density="land-ldpi" />
        <splash src="www/res/screens/android/screen-mdpi-landscape.png" density="land-mdpi" />
        <splash src="www/res/screens/android/screen-xhdpi-landscape.png" density="land-xhdpi" />
        <splash src="www/res/screens/android/screen-hdpi-portrait.png" density="port-hdpi" />
        <splash src="www/res/screens/android/screen-ldpi-portrait.png" density="port-ldpi" />
        <splash src="www/res/screens/android/screen-mdpi-portrait.png" density="port-mdpi" />
        <splash src="www/res/screens/android/screen-xhdpi-portrait.png" density="port-xhdpi" />
    </platform>
    <platform name="ios">
        <icon platform="ios" src="www/res/icons/ios/icon-60-3x.png" width="180" height="180" />
        <icon platform="ios" src="www/res/icons/ios/icon-60.png" width="60" height="60" />
        <icon platform="ios" src="www/res/icons/ios/icon-60-2x.png" width="120" height="120" />
        <icon platform="ios" src="www/res/icons/ios/icon-76.png" width="76" height="76" />
        <icon platform="ios" src="www/res/icons/ios/icon-76-2x.png" width="152" height="152" />
        <icon platform="ios" src="www/res/icons/ios/icon-40.png" width="40" height="40" />
        <icon platform="ios" src="www/res/icons/ios/icon-40-2x.png" width="80" height="80" />
        <icon platform="ios" src="www/res/icons/ios/icon-57.png" width="57" height="57" />
        <icon platform="ios" src="www/res/icons/ios/icon-57-2x.png" width="114" height="114" />
        <icon platform="ios" src="www/res/icons/ios/icon-72.png" width="72" height="72" />
        <icon platform="ios" src="www/res/icons/ios/icon-72-2x.png" width="144" height="144" />
        <icon platform="ios" src="www/res/icons/ios/icon-small.png" width="29" height="29" />
        <icon platform="ios" src="www/res/icons/ios/icon-small-2x.png" width="58" height="58" />
        <icon platform="ios" src="www/res/icons/ios/icon-50.png" width="50" height="50" />
        <icon platform="ios" src="www/res/icons/ios/icon-50-2x.png" width="100" height="100" />
        <splash platform="ios" src="www/res/screens/ios/screen-iphone-portrait-2x.png" width="640" height="960" />
        <splash platform="ios" src="www/res/screens/ios/screen-iphone-portrait.png" width="320" height="480" />
        <splash platform="ios" src="www/res/screens/ios/screen-iphone-568h-2x.png" width="640" height="1136" />
        <splash platform="ios" src="www/res/screens/ios/screen-ipad-portrait.png" width="768" height="1024" />
        <splash platform="ios" src="www/res/screens/ios/screen-ipad-portrait-2x.png" width="1536" height="2048" />
        <splash platform="ios" src="www/res/screens/ios/screen-ipad-landscape.png" width="1024" height="768" />
        <splash platform="ios" src="www/res/screens/ios/screen-ipad-landscape-2x.png" width="2048" height="1536" />
    </platform>
</widget>
